<UserControl x:Class="WPFDesigner.Designer"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Height="Auto" Width="Auto">
    <Border BorderBrush="#FF000000" BorderThickness="1,1,1,1" x:Name="OuterBorder" MouseUp="OuterBorder_MouseUp">
        <Grid PreviewMouseDown="DesignArea_PreviewMouseDown">
            <Grid.Background>
                <ImageBrush x:Name="areabackground" Stretch="None"  AlignmentY="Top" AlignmentX="Center"/>
            </Grid.Background>
            <Canvas ClipToBounds="True" x:Name="DesignArea"  ScrollViewer.HorizontalScrollBarVisibility="Auto" ScrollViewer.VerticalScrollBarVisibility="Auto"/>
        </Grid>
    </Border>
</UserControl>
